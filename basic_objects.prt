protocol basic_objects

obj TimePoint24

    uint8             hh : [0, 23]
    uint8             mm : [0, 59]

obj_end

obj TimeWindow

    o TimePoint24       from
    o TimePoint24       to

obj_end

obj LocalTime

    uint32            year : [1800,3000]
    uint8             month : [1, 12]
    uint8             day : [1, 31]

    uint8             hh : [0, 23]
    uint8             mm : [0, 59]
    uint8             ss : [0, 59]

obj_end

enum weekdays_e

        MO = 1
        TU = 2
        WE = 4
        TH = 8
        FR = 16
        SA = 32
        SU = 64

enum_end

obj Weekdays

    uint32            mask

obj_end

obj TimeRange

    uint32        from   # epoch (seconds)
    uint32        to     # epoch (seconds)

obj_end

obj LocalTimeRange

    o LocalTime       from
    o LocalTime       to

obj_end

obj Date

    uint32            year : [1800,3000]
    uint8             month : [1, 12]
    uint8             day : [1, 31]

obj_end

obj Email

    string     email

obj_end
